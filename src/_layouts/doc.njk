<!doctype html>

<html lang="en">
  <head>
    {% include "_head.njk" %}
    <title>{{ title }} &middot; Unison programming language</title>
  </head>

  <body>
    <main id='doc'>
      <a id="toggle-index">
        <div class="icon icon-list">
          <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="3" y="9.5" width="8" height="1" rx="0.5" fill="currentColor"/>
            <rect x="3" y="6.5" width="8" height="1" rx="0.5" fill="currentColor"/>
            <rect x="3" y="3.5" width="8" height="1" rx="0.5" fill="currentColor"/>
          </svg>
        </div>
      </a>
      {% include "_header.njk" %}
      <div id="main-content">
        <aside id='index'>
          <div id="autocomplete"></div>
          {% include "_doc-sidebar-content.njk" %}
        </aside>

        <h1 id="title">{{ title }}</h1>
        {{content | safe}}
        {% include "_footer.njk" %}
      </div>
    </main>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@algolia/autocomplete-theme-classic" />
    <script src="https://cdn.jsdelivr.net/npm/algoliasearch@4.5.1/dist/algoliasearch-lite.umd.js" integrity="sha256-EXPXz4W6pQgfYY3yTpnDa3OH8/EPn16ciVsPQ/ypsjk=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@algolia/autocomplete-js"></script>
    <script src="/js/docs.js"></script>
    {% include "_js.njk" %}
  </body>
</html>
